            attributeName="transform"
            dur="9s"
            repeatCount="indefinite"
            type="rotate"
            values="0 12 12;360 12 12"></animateTransform></rect
        ><rect width="2" height="9" x="11" y="11" fill="currentColor" rx="1"
          ><animateTransform
